<page:PageControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:Avalonia="clr-namespace:TheArtOfDev.HtmlRenderer.Avalonia;assembly=Avalonia.HtmlRenderer"
			 xmlns:page="using:agac.Controls"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="800"
             x:Class="agac.Views.TareasPage.TareaInfoView"
			 Title="Tarea" x:Name="root">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<Label Margin="5" Content="{Binding tarea.titulo}" FontWeight="Bold" Foreground="{StaticResource	Black}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
		</Grid>
		
		<Avalonia:HtmlPanel Grid.Row="1" x:Name="_htmlPanel" Margin="5"/>

		<Grid Grid.Row="0" Margin="5">
		</Grid>	
	</Grid>
</page:PageControl>
